<Window x:Class="WeatherMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherMonitor"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Weather" 
        Height="450" 
        Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <!-- Menu -->
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <!-- Status bar -->
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Menu Name="MainMenu"
          Grid.Row="0" Grid.ColumnSpan="2">
      <MenuItem Header="_File">
        <MenuItem Header="E_xit"/>
      </MenuItem>
    </Menu>

    <StackPanel Name="GraphStackPanel"
                Margin="10"
                HorizontalAlignment="Left"
                Width="420"
                Grid.Row="2" Grid.Column="0">
    </StackPanel>

    <StackPanel Grid.Row="2"
                Grid.Column="2">
      <StackPanel Name="ResultStackPanel" 
                  Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text=""
                     Width="100"/>
          <TextBlock Text="Today"
                     Width="75"/>
          <TextBlock Text="Yesterday"
                     Width="75"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Temperature"
                     Width="100"/>
          <TextBlock Text="{Binding Today.DemonTime, StringFormat=HH:mm}"
                     Width="75"/>
          <TextBlock Text="{Binding Yesterday.DemonTime, StringFormat=HH:mm}"
                     Width="75"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Temperature"
                     Width="100"/>
          <TextBlock Text="{Binding Today.Time, StringFormat=HH:mm}"
                     Width="75"/>
          <TextBlock Text="{Binding Yesterday.Time, StringFormat=HH:mm}"
                     Width="75"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Temperature"
                     Width="100"/>
          <TextBlock Text="{Binding Today.Temperature}"
                     Width="75"/>
          <TextBlock Text="{Binding Yesterday.Temperature}"
                     Width="75"/>
        </StackPanel>
      </StackPanel>
    </StackPanel>

    <StatusBar Grid.Row="9"
               Grid.ColumnSpan="2">
      <StatusBarItem Content="{Binding Now.DisplayDate}"
                     ToolTip="ISO date"/>
      <Separator/>
      
      <StatusBarItem Name="DailyReportUpdateDateStatusBarItem">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Last daily date: "/>
          <TextBlock Text="{Binding Daily.UpdateDate, StringFormat=yyyy-MM-dd}"/>
        </StackPanel>
      </StatusBarItem>

      <Separator/>

      <StatusBarItem>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Sun up: "/>
          <TextBlock Text="{Binding Now.SunriseTime, StringFormat=HH:mm}"/>
          <TextBlock Text=" / down: "/>
          <TextBlock Text="{Binding Now.SunsetTime, StringFormat=HH:mm}"/>
        </StackPanel>
      </StatusBarItem>

      <StatusBarItem HorizontalAlignment="Right">
        <TextBlock Text="{Binding Now.CurrentTime, StringFormat=HH:mm:ss}"/>
      </StatusBarItem>
    </StatusBar>
  </Grid>
</Window>
