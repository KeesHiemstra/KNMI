<Window x:Class="WeatherMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherMonitor"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Weather" 
        Height="450" 
        Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="8*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <!-- Menu -->
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <!-- Status bar -->
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Menu Name="MainMenu"
          Grid.Row="0" Grid.ColumnSpan="2">
      <MenuItem Header="_File">
        <MenuItem Header="E_xit"/>
      </MenuItem>
    </Menu>


    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,379" Grid.RowSpan="8">
      <StackPanel Name="ResultStackPanel" 
                  Orientation="Vertical">

      </StackPanel>
    </StackPanel>

    <StatusBar Grid.Row="9"
               Grid.ColumnSpan="2">
      <StatusBarItem Content="{Binding Now.DisplayDate}"
                     ToolTip="ISO date"/>
      <Separator/>
      
      <StatusBarItem Name="DailyReportUpdateDateStatusBarItem">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Last daily date: "/>
          <TextBlock Text="{Binding Daily.UpdateDate, StringFormat=yyyy-MM-dd}"/>
        </StackPanel>
      </StatusBarItem>

      <StatusBarItem Content="{Binding Now.DisplayTime}"
                     HorizontalAlignment="Right"/>
    </StatusBar>
  </Grid>
</Window>
